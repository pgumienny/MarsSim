<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bedroom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marssim.MarsBase"
    tools:showIn="@layout/activity_mars_base">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASE"
        android:id="@+id/buttonBase"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonRooms"
        android:allowUndo="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:id="@+id/buttonRooms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonGreenhouse"
        android:src="@drawable/ikona_szklarnia"
        android:layout_below="@+id/progressBarEntertainment"
        android:layout_alignRight="@+id/progressBarEntertainment"
        android:layout_alignEnd="@+id/progressBarEntertainment" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSolarPanels"
        android:src="@drawable/panale_sloneczne_ikona"
        android:layout_below="@+id/imageButtonGreenhouse"
        android:layout_alignLeft="@+id/imageButtonGreenhouse"
        android:layout_alignStart="@+id/imageButtonGreenhouse" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonGym"
        android:layout_alignRight="@+id/imageButtonSolarPanels"
        android:layout_alignEnd="@+id/imageButtonSolarPanels"
        android:layout_below="@+id/imageButtonSolarPanels"
        android:src="@drawable/ikona_silownia" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLaboratory"
        android:layout_below="@+id/imageButtonGym"
        android:layout_alignRight="@+id/imageButtonGym"
        android:layout_alignEnd="@+id/imageButtonGym"
        android:src="@drawable/ikona_laboratorium" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonWorkshop"
        android:layout_below="@+id/imageButtonLaboratory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/warsztat_ikona" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonEntertainmentRoom"
        android:layout_below="@+id/imageButtonWorkshop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/fun_ikona" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonBedroom"
        android:layout_below="@+id/imageButtonEntertainmentRoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ikona_sypialnia" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonDining"
        android:layout_below="@+id/imageButtonBedroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/jadalnia_ikona" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonRover"
        android:layout_below="@+id/imageButtonDining"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ikona_laboratorium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/textViewNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Satiety"
        android:id="@+id/textViewSatiety"
        android:layout_below="@+id/buttonBase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rest"
        android:id="@+id/textViewRest"
        android:textColor="#ffffff"
        android:layout_below="@+id/buttonBase"
        android:layout_toRightOf="@+id/progressBarSatiety"
        android:layout_toEndOf="@+id/progressBarSatiety" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Health"
        android:id="@+id/textViewHeatlh"
        android:textColor="#ffffff"
        android:layout_above="@+id/imageButtonGreenhouse"
        android:layout_toLeftOf="@+id/progressBarHealth"
        android:layout_toStartOf="@+id/progressBarHealth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Entertain"
        android:id="@+id/textViewEntertainment"
        android:textColor="#ffffff"
        android:layout_above="@+id/imageButtonGreenhouse"
        android:layout_toLeftOf="@+id/progressBarEntertainment"
        android:layout_toStartOf="@+id/progressBarEntertainment" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarSatiety"
        android:layout_below="@+id/buttonBase"
        android:layout_toRightOf="@+id/textViewSatiety"
        android:layout_toEndOf="@+id/textViewSatiety"
        android:background="#ffffff" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRest"
        android:layout_below="@+id/buttonBase"
        android:layout_toRightOf="@+id/textViewRest"
        android:layout_toEndOf="@+id/textViewRest"
        android:background="#ffffff" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarHealth"
        android:background="#ffffff"
        android:layout_below="@+id/buttonBase"
        android:layout_toLeftOf="@+id/textViewEntertainment"
        android:layout_toStartOf="@+id/textViewEntertainment" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarEntertainment"
        android:layout_alignBottom="@+id/textViewRest"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAstronaut"
        android:layout_alignTop="@+id/imageButtonGreenhouse"
        android:src="@drawable/astronautGym"
        android:layout_toLeftOf="@+id/imageButtonGreenhouse"
        android:layout_toStartOf="@+id/imageButtonGreenhouse" />

</RelativeLayout>
